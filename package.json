{
  "name": "start-tailwindcss",
  "version": "1.0.0",
  "description": "tailwindcss installation setup",
  "main": "index.js",
  "scripts": {
    "start": "npx live-server --port=3000 ./public",
    "css:watch": "npx tailwindcss -i ./src/tailwind.css -o ./public/style.css --watch",
    "css:minify": "npx tailwindcss -i ./src/tailwind.css -o ./public/style.css --minify",
    "ptr:check": "npx prettier --check ./public/**/*.html",
    "ptr:write": "npx prettier --write ./public/**/*.html"
  },
  "keywords": ["tailwind", "css"],
  "author": "Jabed Hossain <jabedhossain.app.dev@gmail.com> (https://github.com/jabed-dev)",
  "license": "ISC",
  "devDependencies": {
    "live-server": "^1.2.2",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.2.2"
  }
}
